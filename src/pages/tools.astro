      }
      
      this.isGameOver = true;

      let finalMessage;
      if (this.mode === "double") {
        finalMessage = message || `æ¸¸æˆç»“æŸï¼ç©å®¶1å¾—åˆ†: ${this.score1}, ç©å®¶2å¾—åˆ†: ${this.score2}`;
      } else {

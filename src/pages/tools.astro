---
import Layout from "@/components/Layout.astro";
import ToolsPage from "@/components/ToolsPage";
---

<Layout
  title="工具中心"
  description="在线工具集合 - 游戏娱乐与爬虫演示"
  skipSrTitle={false}
>
  <head>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="format-detection" content="telephone=no" />
    <meta name="msapplication-tap-highlight" content="no" />
    
    <!-- KaTeX for math formula rendering -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
    
    <!-- gif.js for GIF compression -->
    <script src="https://cdn.jsdelivr.net/npm/gif.js@0.2.0/dist/gif.js"></script>
    
    <!-- DataGridXL for spreadsheet-like editing -->
    <link rel="stylesheet" href="https://code.datagridxl.com/datagridxl.css" />
    <script defer src="https://code.datagridxl.com/datagridxl.js"></script>
  </head>

  <!-- 使用 React 组件替代内联脚本 -->
  <ToolsPage client:load />
</Layout>

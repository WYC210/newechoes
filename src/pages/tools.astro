  // äº”å­æ£‹æ¸¸æˆç±»
  class GomokuGame {
    constructor(canvas, mode) {
      this.canvas = canvas;
      this.ctx = canvas.getContext("2d");
      this.mode = mode;
      this.boardSize = 15;
      this.cellSize = Math.floor(
        (Math.min(canvas.width, canvas.height) - 40) / this.boardSize
      );
      this.board = Array(this.boardSize)
        .fill(null)
        .map(() => Array(this.boardSize).fill(null));
